<MainLayout>:
    AnchorLayout:
        padding: 200
        spacing: 2
        
        canvas.before:
            Color:
                rgba: 1, 1, 1, 0.5
            Rectangle:
                pos: self.pos
                size: self.size

        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'top'
            Button:
                text: 'YouTube'
                background_color: (1, 0, 0, 0.8)  # Red
                size_hint: (None, None)
                size: (200, 50)  # Button size
                on_press: app.root.current = 'youtube'

        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'
            Button:
                text: 'TikTok'
                background_color: (0, 0, 0, 1)  # Black
                size_hint: (None, None)
                size: (200, 50)  # Button size
                on_press: app.root.current = 'tiktok'

        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'bottom'
            Button:
                text: 'Instagram'
                background_color: (0.2, 0, 1, 1)  # Purple
                size_hint: (None, None)
                size: (200, 50)  # Button size
                on_press: app.root.current = 'instagram'

<YoutubeLayout>:
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        
        Label:
            id: titre
            text: "Youtube Downloader"
            size_hint_y: None
            height: self.texture_size[1]
            font_size: "30"

        TextInput:
            id: link
            hint_text: "URL :"
            size_hint_y: None
            height: '40dp'
            multiline: False

        Label:
            id: MSG
            text: ""
            font_size: "15"
            multiline: True
        
        AsyncImage:
            id: image
            source: "" 
            background_color: 0, 0, 0, 0

        Label:
            id: MSG1
            text: ""
            font_size: "15"

        Button:
            text: "DOWNLOAD"
            size_hint_y: None
            height: '60dp'
            on_press: root.telecharge(self)
            
        
        Button:
            text: 'Home'
            background_color: (1, 0, 0, 0.8)  # Red
            size_hint: (None, None)
            size: (100, 25)  # Button size
            on_press: app.root.current = 'main'


    

<TiktokLayout>:
    orientation: 'vertical'

    Button:
        text: 'Home'
        background_color: (1, 0, 0, 0.8)  # Red
        size_hint: (None, None)
        size: (200, 50)  # Button size
        on_press: app.root.current = 'main'

    Label:
        text: "TikTok Downloader"
        size_hint: (1, 0.3)
        font_size: "30"

<InstagramLayout>:
    orientation: 'vertical'

    Button:
        text: 'Home'
        background_color: (1, 0, 0, 0.8)  # Red
        size_hint: (None, None)
        size: (200, 50)  # Button size
        on_press: app.root.current = 'main'

    Label:
        text: "Instagram Downloader"
        size_hint: (1, 0.3)
        font_size: "30"
